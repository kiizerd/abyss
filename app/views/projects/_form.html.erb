<%= form_with model: project, class: "form" do |form| %>
  <div class="flex flex-col">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-field' %>
    <% project.errors.full_messages_for(:name).each do |message| %>
      <div class='text-red-500 mb-6'><%= message %></div>
    <% end %>
  </div>

  <div class="flex flex-col">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-field' %>
    <% project.errors.full_messages_for(:description).each do |message| %>
      <div class='text-red-500 mb-6'><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>