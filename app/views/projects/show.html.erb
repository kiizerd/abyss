<article>
  <h2><%= @project.name %></h2>
  <p class="ml-4"><%= @project.description %></p>
  <section class='project-task-list'>
    <div>
      <h4>Tasks</h4>
    </div>
    <ul>
      <% @project.tasks.each do |task| %>
        <li><%= task.name %></li>
      <% end %>
    </ul>
  </section>
</article>

<%= render "navbar", project: @project %>