<article>
  <h2 class='title' id='project-name'>
    <%= @project.name %>
  </h2>
  <section class="mx-2 my-1" id='project-description'>
    <% @project.description.split("\n").each do |line| %>
      <p><%= line %></p>
    <% end %>
  </section>
  <section class='project-task-list'>
    <h4>Tasks</h4>
    <ul>
      <%= render @project.tasks %>
    </ul>
    <%= render 'tasks/form' %>
  </section>
</article>

<%= render "control_btns" %>

<%= render "navbar" %>
